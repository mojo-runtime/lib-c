// -*- C++ -*-
#pragma once

#include "c/SYS_chdir.h"
#include "Result"

namespace system {

static inline
auto
chdir(const char* path) noexcept
{
#define _(name) _##name = name
    enum Error
    {
#if defined(__linux__) || defined(__FreeBSD__)
#  include "c/EACCES.h"
        _(EACCES),
#  include "c/EFAULT.h"
        _(EFAULT),
#endif

#if defined(__FreeBSD__)
#  include "c/EINTR.h"
        _(EINTR),
#endif

#if defined(__linux__) || defined(__FreeBSD__)
#  include "c/EIO.h"
        _(EIO),
#  include "c/ELOOP.h"
        _(ELOOP),
#  include "c/ENAMETOOLONG.h"
        _(ENAMETOOLONG),
#  include "c/ENOENT.h"
        _(ENOENT),
#endif

#if defined(__linux__)
#  include "c/ENOMEM.h"
        _(ENOMEM),
#endif

#if defined(__FreeBSD__)
#  include "c/ENOLINK.h"
        _(ENOLINK),
#endif

#if defined(__linux__) || defined(__FreeBSD__)
#  include "c/ENOTDIR.h"
        _(ENOTDIR),
#endif
    };
#undef _

    return Result<void, Error>(SYS_chdir, path);
}

}
