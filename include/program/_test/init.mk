. := $(realpath $(dir $(lastword $(MAKEFILE_LIST))))

#---------------------------------------------------------------------------------------------------

$(.)/.build:
	$(call mkdir,$@)

$(c++-compilers:%=$(.)/.build/%): %: | $(.)/.build
	$(call mkdir,$@)

#---------------------------------------------------------------------------------------------------

$(foreach c,$(c++-compilers),$(eval $(call compile,$(c),include-all.cxx)))
