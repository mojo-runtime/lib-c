// -*- C -*-

#pragma once

#if defined(__linux__)
#  include <NCCS>
#  include <cc_t>
#  include <tcflag_t>
#elif defined(__FreeBSD__)
#  include <NCCS>
#  include <cc_t>
#  include <speed_t>
#  include <tcflag_t>
#else
#  error
#endif

struct termios
{
    tcflag_t
    c_iflag;

    tcflag_t
    c_oflag;

    tcflag_t
    c_cflag;

    tcflag_t
    c_lflag;

#if defined(__linux__)
    cc_t
    c_line;
#endif

    cc_t
    c_cc[NCCS];

#if defined(__FreeBSD__)
    speed_t
    c_ispeed;

    speed_t
    c_ospeed;
#endif
};
