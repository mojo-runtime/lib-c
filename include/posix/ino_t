// -*- C -*-

#pragma once

#if defined(__linux__)
#  if defined(__x86_64__)
#    include <uint64_t>
//   @see include/uapi/asm-generic/posix_types.h
     typedef /* __kernel_ulong_t */ uint64_t ino_t;
#  else
#    error
#  endif
#elif defined(__FreeBSD__)
#  include <uint32_t>
// @see sys/sys/_types.h
   typedef uint32_t ino_t;
#else
#  error
#endif
